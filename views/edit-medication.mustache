 <div class = "container">

<h1>Edit  medication</h1>

    <div class="container">
      <form action="/medications/upload/edit-medication/{{id}}" method="POST" enctype="multipart/form-data">
        <label>Photo</label>
        <input type="file" name="photo" />
        <button type="submit">Upload</button>
      </form>

      <img src="/uploads/{{medImageUrl}}" class="{{className}}" />

      <form action="/medications/edit-medication/{{id}}" method="POST">
        <input type="hidden" name="medicineId" value={{id}}/>
        <div class="form-group">
    <label>Medicine Name</label>
    <input type="text" name="medicineName" class="form-control" value={{medicineName}} placeholder="Enter Medicine Name">
  </div>
    <div class="form-group">
    <label>Description of Medicine</label>
    <textarea class="form-control" name="medDescription" value={{medDescription}} placeholder='Enter Medicine Description'></textarea>
    </div>
    <div class="form-group">
    <label>Frequency</label>
    <input type="text" name="medFrequency" value={{medFrequency}} placeholder='Enter Frequency Here'/>
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
      </form>
