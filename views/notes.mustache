<!doctype html>
<html lang="en">
 {{> head}}
<body>
  {{> navbar}}
 
 <div id="notesCotainer" class = "container">
 
    <h1 id="topics"> Notes </h1>

    {{#notes}}
    <div id="paper">
     <label id="writenNote"><b>{{title}}</b></label>
     <p id="writenNote">{{body}}</p>
    </div>
      <form method="POST" action="/notes/delete-note">
        <input name="id" type="hidden" value="{{id}}"/>
        <button class="btn btn-danger btn-sm">Delete</button>
     </form>

    {{/notes}}
    <div id="addNote">
    <h2 id="topics">Add a Note</h2>
    <form action="/notes" method="POST">
    <div class="form-group">
    {{! <label>Title</label> }}
    <input type="text" name="title" class="form-control" placeholder="Enter a Title">
     </div>
    <div class="form-group">
    {{! <label>Body</label> }}
    <textarea class="form-control" name="body" placeholder="Enter text"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    </form>
    </div>

     </div>
   
  {{> footer}}
</body>
</html>