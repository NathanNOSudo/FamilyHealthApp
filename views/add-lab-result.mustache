<!doctype html>
<html lang="en">
 {{> head}}
  <body>
  
  {{> navbar}}
  
  <div class = "container">
    <h2>Add Lab Snapshots</h2>
    <form action="/labresults/upload" method="POST" enctype="multipart/form-data">
      <label> Photo </label>
      <input type="file" name="photo">
      <button type="submit"> Upload </button>
    </form>
    
    <img src='{{imageURL}}' class="{{className}}">
    
    <form action="/labresults/add-lab-result/" method = "POST">
      <div class = "form-group">
        <label> Lab TesT Day</label>
        <input type="text" name="testdate" class="form-control" placeholder = "Enter Test Date" />
      </div>
      <div class="form-group">
        <label>Category</label>
        <input type="text" name="category" class="form-control" placeholder="ex: pediatrics, cardiologist, dentist" />  
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
    
    <div>
      {{#message}}
      <div class="alert alert-danger" role="alert">
        {{message}}
      </div>
      {{/message}}
    </div>
    
    
  </div>
  {{> footer}}
  </body>
</html>