<!doctype html>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
<html lang="en">
 {{> head}}
  <body>
  
  {{> navbar}}
<div class="container-fluid">
    <div class="col-8 offset-2">


<form method="POST" action="/members/update/{{id}}">

    <h5> <b>Updating: </b> {{name}}</h5>
    <div class="form-group">
        <label for="exampleInputEmail1">Relationship</label>
        <input type="text" name="family_member" value="{{updatemember.family_member}}" class="form-control">
    </div>

    <div class="form-group">
      <label for="exampleInputEmail1">First Name</label>
      <input type="text" name="first_name" value="{{updatemember.first_name}}" class="form-control">
    </div>

    <div class="form-group">
      <label for="exampleInputPassword1">Last Name</label>
      <input type="text" name="last_name" value="{{updatemember.last_name}}" class="form-control">
    </div>
    
    <div class="form-group">
      <label for="exampleInputPassword1">Birthday</label>
      <input type="text" name="birthday" value="{{updatemember.birthday}}" class="form-control">
    </div>

<button class="btn btn-light">Update</button>
</form>

</body>
 {{> footer}}
</html>

